@model Loregroup.Core.ViewModels.FrontendLoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Frontend/images/icons/favicon.png" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Frontend/Lore Group Login/login/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    @*<link rel="stylesheet" type="text/css" href="~/Frontend/Lore Group Login/login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">*@
    <!--===============================================================================================-->
    @*<link rel="stylesheet" type="text/css" href="~/Frontend/Lore Group Login/login/fonts/iconic/css/material-design-iconic-font.min.css">*@
    <!--===============================================================================================-->
    @*<link rel="stylesheet" type="text/css" href="~/Frontend/Lore Group Login/login/vendor/animate/animate.css">*@
    <!--===============================================================================================-->
    @*<link rel="stylesheet" type="text/css" href="~/Frontend/Lore Group Login/login/vendor/css-hamburgers/hamburgers.min.css">*@
    <!--===============================================================================================-->
    @*<link rel="stylesheet" type="text/css" href="~/Frontend/Lore Group Login/login/vendor/animsition/css/animsition.min.css">*@
    <!--===============================================================================================-->
    @*<link rel="stylesheet" type="text/css" href="~/Frontend/Lore Group Login/login/vendor/select2/select2.min.css">*@
    <!--===============================================================================================-->
    @*<link rel="stylesheet" type="text/css" href="~/Frontend/Lore Group Login/login/vendor/daterangepicker/daterangepicker.css">*@
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Frontend/Lore Group Login/login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Frontend/Lore Group Login/login/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <style>
        .back-arrow {
            background: url('../../Frontend/Lore Group Login/icons8-back-26-gray.png')no-repeat;
            width: 50px;
            height: 30px;
        }

            .back-arrow:hover {
                background: url('../../Frontend/Lore Group Login/icons8-back-26-black.png')no-repeat;
                width: 50px;
                height: 30px;
            }
    </style>

    <div class="limiter">

        <div class="container-login100" style="background-image:url('../../Frontend/Lore Group Login/login-back.jpg')">
            <div class="wrap-login100">
                <a href="@Url.Action("Index","Lore")">
                    <div class="back-arrow">
                    </div>
                </a>

                <div class="login100-form validate-form">
                    <span class="login100-form-logo">
                        <img src="~/Frontend/images/icons/Lore-Logo-Dark.png" />
                        <!-- <i class="zmdi zmdi-landscape"></i> -->
                    </span>

                    <span class="login100-form-title p-b-34 p-t-27">
                        Log in
                    </span>
                    <br>

                    @if (TempData["LoginMsg"] != "" && TempData["LoginMsg"] != null)
                    {
                        <div class="alert alert-error" id="success-alert">
                            <button type="button" class="close" data-dismiss="alert">x</button>
                            <strong>@TempData["LoginMsg"]! </strong>
                        </div>
                    }

                    @using (Html.BeginForm("Login", "Lore", FormMethod.Post))
                    {

                        <div class="form-group">
                            @Html.BsTextBoxWithPHFor(model => model.Username)
                            @Html.ValidationMessageFor(model => model.Username)
                            @*<label class="control-label" for="username">Username</label>
                                <input type="text" placeholder="example@gmail.com" title="Please enter you username" required="" value="" name="username" id="username" class="form-control">
                                <span class="help-block small">Your unique username to app</span>*@
                        </div>
                        <div class="form-group">
                            @Html.BsPasswordWithPhFor(model => model.Password)
                            @Html.ValidationMessageFor(model => model.Password)
                            @*<label class="control-label" for="password">Password</label>
                                <input type="password" title="Please enter your password" placeholder="******" required="" value="" name="password" id="password" class="form-control">
                                <span class="help-block small">Yur strong password</span>*@
                        </div>

                        @*<div class="wrap-input100 validate-input" data-validate="Enter username">
                                <input class="input100" type="text" name="username" placeholder="Username">
                                <span class="focus-input100" data-placeholder="&#xf207;"></span>
                            </div>

                            <div class="wrap-input100 validate-input" data-validate="Enter password">
                                <input class="input100" type="password" name="pass" placeholder="Password">
                                <span class="focus-input100" data-placeholder="&#xf191;"></span>
                            </div>*@

                        <!-- <div class="contact100-form-checkbox"> -->
                        <!-- <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me"> -->
                        <!-- <label class="label-checkbox100" for="ckb1"> -->
                        <!-- Remember me -->
                        <!-- </label> -->
                        <!-- </div> -->

                        <div class="container-login100-form-btn">
                            <button class="login100-form-btn" type="submit">Login</button>
                        </div>
                    }

                    <div class="text-center p-t-10">
                        <a class="txt1" href="@Url.Action("ResetPassword", "Lore")">
                            Forgot Password?
                        </a>
                    </div>

                    <br />
                    <div class="text-center p-t-50">
                        <span class="txt1">
                            Don’t have an account ?
                        </span>
                        <a class="txt2" href="@Url.Action("Registration", "Setting")">
                            Sign Up
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>


    <!--===============================================================================================-->
    @*<script src="~/Frontend/Lore Group Login/login/vendor/jquery/jquery-3.2.1.min.js"></script>*@
    <!--===============================================================================================-->
    @*<script src="~/Frontend/Lore Group Login/login/vendor/animsition/js/animsition.min.js"></script>*@
    <!--===============================================================================================-->
    @*<script src="~/Frontend/Lore Group Login/login/vendor/bootstrap/js/popper.js"></script>*@
    <script src="~/Frontend/Lore Group Login/login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    @*<script src="~/Frontend/Lore Group Login/login/vendor/select2/select2.min.js"></script>*@
    <!--===============================================================================================-->
    @*<script src="~/Frontend/Lore Group Login/login/vendor/daterangepicker/moment.min.js"></script>
        <script src="~/Frontend/Lore Group Login/login/vendor/daterangepicker/daterangepicker.js"></script>*@
    <!--===============================================================================================-->
    @*<script src="~/Frontend/Lore Group Login/login/vendor/countdowntime/countdowntime.js"></script>*@
    <!--===============================================================================================-->
    @*<script src="~/Frontend/Lore Group Login/login/js/main.js"></script>*@

</body>
</html>