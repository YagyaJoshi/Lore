@model Loregroup.Core.ViewModels.FrontendDashboardViewModel

@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/_MasterFrontend.cshtml";
}

<style>
    .bg123 {
        background: #ff0000;
    }
</style>

<link href="/Fontend/css/form-wizard-blue.css" rel="stylesheet" type="text/css">

@if (Model.UserId > 0)
{
    <!-- breadcrumb -->
    <div class="container">
        <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
            <a href="index.html" class="stext-109 cl8 hov-cl1 trans-04">
                Home
                <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
            </a>

            <span class="stext-109 cl4">
                Dashboard
            </span>
        </div>
    </div>

    <div class="container">
        <div class="row bg0 p-t-30 p-b-85">
            <div class="nav_col">
                <div class="h-100 nav_side_box nav_list">
                    <div class="nav-side-container">
                        <ul class="nav_side">
                            <li class="activet">
                                <a href="@Url.Action("DashBoard", "Lore")">
                                    <span class="icon-dashboard"></span>
                                    <span class="text">Dashboard</span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("AccountDetails","Lore")">
                                    <span class="icon-user"></span>
                                    <span class="text">Account Details</span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Addresses","Lore")">
                                    <span class="icon-map-marker"></span>
                                    <span class="text">Addresses</span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("OrderHistory","Lore")">
                                    <span class="icon-shopping-cart"></span>
                                    <span class="text">Order History</span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("DownloadImages","Lore")">
                                    <span class="icon-shopping-cart"></span>
                                    <span class="text">Download Order Images</span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("SignOut", "Lore")">
                                    <span class="icon-signout"></span>
                                    <span class="text">Logout</span>
                                </a>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
            <div class="col_right m-l-15">
                <div class="nav_side_box p-tb-15 p-lr-30">
                    <h1 class="box_h1">My Account</h1>
                </div>

                <div class="nav_side_box m-t-20 p-t-15 p-lr-20 h-100">
                    <p class="fs-15 f-family-md m-lr-10 m-b-15">
                        Hello, <b>@Model.Shopname !</b>
                    </p>

                    <div class="m-b-10 p-tb-15 p-lr-20 nav_side_box col-md-12 col-sm-12">
                        <h1 class="box_h1">
                            Account Information
                            <a href="@Url.Action("AccountDetails","Lore")">
                                <span class="fs-18 edit_ico icon-edit"></span>
                            </a>
                        </h1>
                        <hr>

                        <p class="m-b-2">@Model.Fullname</p>
                        <p class="m-b-2">@Model.EmailId</p>

                        <a style="color:#ee1720;" class="m-b-2" href="@Url.Action("AccountDetails", "Lore")">Change Password</a>
                    </div>

                    <div class="m-b-10 p-tb-15 p-lr-20 nav_side_box col-md-12 col-sm-12">
                        <h1 class="box_h1">
                            Addresses
                            <a href="@Url.Action("AccountDetails","Lore")">
                                <span class="fs-18 edit_ico icon-edit"></span>
                            </a>
                        </h1>
                        <hr>
                        <p class="m-b-2">Billing Address : @Model.BillingAddress</p>
                        <p class="m-b-2">Shipping Address : @Model.ShippingAddress</p>
                    </div>


                    <div class="p-tb-15 p-lr-20 nav_side_box col-md-12 col-sm-12">
                        <h1 class="box_h1">
                            Orders
                            <a href="@Url.Action("OrderHistory","Lore")">
                                <span class="fs-18 edit_ico icon-edit"></span>
                            </a>
                        </h1>
                        <hr>

                        <div>
                            <div class="m-tb-15 col_1 col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                <div class="nav_side_box p-all-15" style="border-bottom:3px solid #229954;">
                                    <p class="box_h1">Completed<span class="fs-18 edit_ico">@Model.CompletedOrdersCount</span></p>
                                </div>
                            </div>

                            <div class="m-tb-15 col_1 col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                <div class="nav_side_box p-all-15" style="border-bottom:3px solid #09c977;">
                                    <p class="box_h1">In Progress<span class="fs-18 edit_ico">@Model.InprogressOrdersCount</span></p>
                                </div>
                            </div>

                            <div class="m-tb-15 col_1 col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                <div class="nav_side_box p-all-15" style="border-bottom:3px solid #ff0000;">
                                    <p class="box_h1">Cancelled<span class="fs-18 edit_ico">@Model.CancelledOrdersCount</span></p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div>
        <div style="margin:30px 0;">
            <div class="success-circle">
                <i class="fa fa-user" aria-hidden="true"></i>
            </div>
        </div>
        <center> <h1> You have not Logged - In.</h1> </center>
    </div>
}


<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.0/jquery.min.js"></script>

<script type="text/javascript">

    $('.nav_side li').click(function () {
        $(this).addClass('activet')
             .siblings()
             .removeClass('activet');
    });
</script>