@model Loregroup.Core.ViewModels.BlocksViewModel
@{
    ViewBag.Title = "EditBlock";
}


<script type="text/javascript">

    function Cancel() {
        document.location = '@Url.Action("Index", "Home")';
    }
</script>

@if (TempData["Error1"] != null)
{
    <div class="red">
        <h4 style="color:red"><strong>Message: </strong>@TempData["Error1"]</h4>
    </div>
}




<div class="col-md-12">
    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
    {
        <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert">×</a>
            <h4>Validation Errors</h4>
            @Html.ValidationSummary()
        </div>
    }
    @using (Html.BeginForm("EditBlock", "Master", FormMethod.Post))
    {



        <div class="box-header">

        </div>
        <div class="box box-info col-md-12">

            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.DistricId)
                            @Html.BootstrapDropDownListFor(m => m.DistricId, new SelectList(Model.DistrictsViewModel.DistrictList, "Id", "Districtname", Model.DistricId))
                            @Html.ValidationMessageFor(model => model.DistricId)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.BlockName)
                            @Html.BsTextBoxWithPHFor(model => model.BlockName)
                            @Html.ValidationMessageFor(model => model.BlockName)
                        </div>
                    </div>
                </div>


            </div>
        </div>


        <div class="box-footer">
            <div class="row">
                <div class="col-md-12">
                    <button type="reset" class="btn btn-default pull-right" onclick=" Cancel();" style="margin-right: 10px">Cancel</button>
                    <button type="submit" class="btn btn-primary pull-right" style="margin-right: 10px">Save</button>
                </div>
            </div>
        </div>
    }
</div>



