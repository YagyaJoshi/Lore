@model Loregroup.Core.ViewModels.CountryViewModel
@{
    ViewBag.Title = "Zone";
}
<script type="text/javascript">

    function Cancel() {
        document.location = '@Url.Action("ShowAllCountries", "Master")';
    }
</script>

@if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
{
    <div class="alert alert-danger">
        <a href="#" class="close" data-dismiss="alert">×</a>
        <h4>Validation Errors</h4>
        @Html.ValidationSummary()
    </div>
}



@using (Html.BeginForm("EditCountry", "Master", FormMethod.Post))
{
    <div class="box box-info col-md-12">
        @if (TempData["Error1"] != null)
        {
            <div class="red">
                <h4 style="color:red"><strong>Message: </strong>@TempData["Error1"]</h4>
            </div>
        }

        <div class="box-header">

        </div><!-- /.box-header -->
        <div class="box-body">

            <div class="col-md-6">
                <div class="form-group">
                    @Html.Label("Country Name")
                    @Html.BsTextBoxWithPHFor(model => model.countryName)
                    @Html.ValidationMessageFor(model => model.countryName)

                </div>
            </div>




            <div class="col-md-6">
                <div class="form-group">
                    @Html.Label("Currency Name")
                    @Html.BsTextBoxWithPHFor(model => model.currencyName)
                    @Html.ValidationMessageFor(model => model.currencyName)

                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    @Html.Label("Currency Symbol")
                    @Html.BsTextBoxWithPHFor(model => model.currencySymbol)
                    @Html.ValidationMessageFor(model => model.currencySymbol)
                    @Html.HiddenFor(model => model.Id)
                </div>
            </div>
        </div>
    </div>


    <div class="box-footer">
        <div class="row">
            <div class="col-md-12">
                <button type="reset" class="btn btn-default pull-right" onclick=" Cancel();" style="margin-right: 10px">Cancel</button>
                <button type="submit" class="btn btn-primary pull-right" style="margin-right: 10px">Save</button>
            </div>
        </div>
    </div>
}

