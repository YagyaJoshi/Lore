<script type="text/javascript">
    function Cancel() {
        document.location = '@Url.Action("Registration", "Setting")';
    }

    $(document).ready(function () {

        if ($("#CountryId").val() == "2") {
            $('#StateName').attr('disabled', 'disabled');
            $('#StateId').removeAttr("disabled");
        }
        else {
            $("#StateId").empty();
            $('#StateId').attr('disabled', 'disabled');
            $('#StateName').removeAttr('disabled');
        }

        //selection change event of State
        $("#CountryId").change(function () {

            if ($("#CountryId").val() == "2") {

                $('#StateName').attr('disabled', 'disabled');
                $('#StateId').removeAttr("disabled");
                $("#StateId").empty();
                //$("#TownId").empty();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetState", "Master")',
                    dataType: 'json',
                    data: { CountryId: $("#CountryId").val() },
                    success: function (states) {
                        $("#StateId").append($('<option/>', {
                            value: 0,
                            text: "--Select State--"
                        }));
                        $.each(states, function (i, state) {
                            $("#StateId").append('<option value="'
                                        + state.Value + '">'
                                        + state.Text + '</option>');
                        });
                    },
                    error: function (ex) {
                        alert('Failed to retrieve States.' + ex);
                    }
                });
            }
            else {

                $('#StateId').attr('disabled', 'disabled');
                $('#StateName').removeAttr('disabled');

            }

            return false;
        });

    });


    $(document).ready(function () {

        if ($("#ShippingModel_CountryId").val() == "2") {
            $('#ShippingModel_StateId').attr('disabled', 'disabled');
            $('#ShippingModel_StateId').removeAttr("disabled");
        }
        else {
            $("#ShippingModel_StateId").empty();
            $('#ShippingModel_StateId').attr('disabled', 'disabled');
            $('#ShippingModel_StateId').removeAttr('disabled');
        }

        //selection change event of State
        $("#ShippingModel_CountryId").change(function () {

            if ($("#ShippingModel_CountryId").val() == "2") {

                $('#ShippingModel_StateId').attr('disabled', 'disabled');
                $('#ShippingModel_StateId').removeAttr("disabled");
                $("#ShippingModel_StateId").empty();

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetState", "Master")',
                    dataType: 'json',
                    data: { CountryId: $("#ShippingModel_CountryId").val() },
                    success: function (states) {
                        $("#ShippingModel_StateId").append($('<option/>', {
                            value: 0,
                            text: "--Select State--"
                        }));
                        $.each(states, function (i, state) {
                            $("#ShippingModel_StateId").append('<option value="'
                                        + state.Value + '">'
                                        + state.Text + '</option>');
                        });
                    },
                    error: function (ex) {
                        alert('Failed to retrieve States.' + ex);
                    }
                });
            }
            else {

                $('#ShippingModel.StateId').attr('disabled', 'disabled');
                $('#ShippingModel.StateId').removeAttr('disabled');

            }

            return false;
        });

    });

