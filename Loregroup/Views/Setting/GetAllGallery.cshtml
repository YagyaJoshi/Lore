@model Loregroup.Core.ViewModels.GalleryViewModel
@{
    ViewBag.Title = "Gallery List";
}

<link href="~/Content/css/datatables/dataTables.bootstrap.css" rel="stylesheet" />
<style type="text/css">
    .data-table {
        border-collapse: collapse;
        border-spacing: 0;
    }
</style>

